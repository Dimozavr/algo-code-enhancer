{
  "manifest_version": 3,
  "name": "Algocode Enhancer",
  "version": "1.1.0",
  "action": {
    "default_icon": {
      "128": "128.png"
    },
    "default_title": "Algocode Enhancer",
    "default_popup": "popup.html"
  },
  "description": "An extension that improves the user experience of algocode.ru & ejudge.algocode.ru.\nButtons to copy testcases, paste and send the solution, sort standings by penalty.\nAnalyze standings and count successful submissions for every task. ",
  "icons": {
    "48": "48.png",
    "128": "128.png"
  },
  "author": "RedON",
  "content_scripts": [
    {
      "matches": [
        "https://ejudge.algocode.ru/*"
      ],
      "js": [
        "ejudge-background.js"
      ],
      "run_at": "document_end",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://algocode.ru/standings/*"
      ],
      "js": [
        "standings-background.js"
      ],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ]
}
